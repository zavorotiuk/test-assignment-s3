{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "es6",
      "sourceMap": true,
      "moduleResolution": "node",
      "lib": [
        "es2017",
        "dom"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "index.ts",
      "src/*",
      "utils/*"
    ],
    "exclude": [
      "node_modules",
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  }